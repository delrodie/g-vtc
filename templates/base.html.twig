<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>
            {% block title %}G-VTC ::
                {% block extra_title %}{% endblock %}
            {% endblock %}

        </title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text><text y=%221.3em%22 x=%220.2em%22 font-size=%2276%22 fill=%22%23fff%22>sf</text></svg>">
        {% block stylesheets %}
            {% block extra_stylesheets %}{% endblock %}
        {% endblock %}

        {% block javascripts %}
            {% block importmap %}{{ importmap('app') }}{% endblock %}
        {% endblock %}
    </head>
    <body>
    <div class="container">
        <header id="gHeader">
            <div class="top-head d-flex justify-content-between align-items-center">
                <div class="d-flex align-items-center">
                    <button class="btn" title="Menu" type="button" data-bs-toggle="offcanvas"
                            data-bs-target="#offcanvasScrolling" aria-controls="offcanvasScrolling"><i
                            class="bi bi-list"></i></button>

                    <a href="#" class="">
                        <h1 class="icon g-logo">G-VTC</h1>
                    </a>

                </div>
                <div class="icons">
                    <div class="position-relative">
                        <a class="" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                            <i class="bi bi-bell"></i>
                            <span
                                class="position-absolute top-0 start-100 translate-middle p-2 bg-danger border border-light rounded-circle">
                                <span class="visually-hidden">Notifications</span> </span></a>
                    </div>

                    <div class="dropdown-center">
                        <a class="" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false"
                           title="Notifications">
                            <i class="bi bi-person-circle"></i>
                        </a>

                        <ul class="dropdown-menu">
                            <li><a class="dropdown-item" href="#">Profile</a></li>
                            <hr>
                            <li><a class="dropdown-item" href="{{ absolute_url(path('app_logout') )}}">Deconnexion</a></li>
                        </ul>
                    </div>
                </div>
            </div>
            <div class="search input-group mb-3">
                <input type="text" class="form-control" placeholder="Recherche" aria-label="Recherche"
                       aria-describedby="button-addon2">
                <button class="btn btn-o-search" type="button" id="button-addon2"><i class="bi bi-search"></i></button>
            </div>
        </header>
        <main id="gMain">
            {% block body %}{% endblock %}
        </main>
        <footer class="">
            <div class="menu-bottom d-flex justify-content-around">
                <a href="{{ absolute_url(path('app_home')) }}" class=""><i class="bi bi-house-fill"></i></a>
                <a href="#" class=""><i class="bi bi-wallet2"></i></a>
                <a href="{{ absolute_url(path('app_vehicule_index')) }}" class=""><i class="bi bi-car-front-fill"></i></a>
                <a href="#" class=""><i class="bi bi-gear"></i></a>
            </div>
        </footer>
    </div>

    <!-- Menu Vertical-->
    <div class="offcanvas offcanvas-start" data-bs-scroll="true" data-bs-backdrop="false" tabindex="-1"
         id="offcanvasScrolling" aria-labelledby="offcanvasScrollingLabel">
        <div class="offcanvas-header">
            <h5 class="offcanvas-title" id="offcanvasScrollingLabel">Menu</h5>
            <button type="button" class="btn-close" data-bs-dismiss="offcanvas" aria-label="Close"></button>
        </div>
        <div class="offcanvas-body">
            <ul class="nav flex-column">
                <li class="nav-item">
                    <a class="nav-link" href="{{ absolute_url(path('app_home') )}}"><i class="bi bi-house"></i> Accueil</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link d-flex justify-content-between align-items-center" data-bs-toggle="collapse"
                       href="#collapseWallet" role="button" aria-expanded="false" aria-controls="collapseWallet">
                        <div class=""><i class="bi bi-wallet2"></i> Portefeuille</div><i
                            class="bi bi-caret-down-fill"></i>
                    </a>

                    <div class="collapse" id="collapseWallet">
                        <ul class="nav flex-column sous-menu">
                            <li class="nav-item">
                                <a class="nav-link active" href="recette.html"></i>Recettes</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="depense.html">Depenses</a>
                            </li>
                        </ul>
                    </div>

                </li>
                <li class="nav-item">
                    <a href="{{ absolute_url(path('app_vehicule_index')) }}" class="nav-link"><i class="bi bi-car-front-fill"></i> Vehicules</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="{{ absolute_url(path('app_chauffeur_index')) }}"><i class="bi bi-person-square"></i> Chauffeurs</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link d-flex justify-content-between align-items-center" data-bs-toggle="collapse"
                       href="#collapseSetting" role="button" aria-expanded="false" aria-controls="collapseSetting">
                        <div class=""><i class="bi bi-gear"></i> Paramètres</div><i
                            class="bi bi-caret-down-fill"></i>
                    </a>

                    <div class="collapse" id="collapseSetting">
                        <ul class="nav flex-column sous-menu">
                            <li class="nav-item">
                                <a href="{{ absolute_url(path('app_admin_user_index') )}}" class="nav-link active"></i>Utilisateurs</a>
                            </li>
                            <li class="nav-item">
                                <a href="{{ absolute_url(path('app_marque_index') )}}" class="nav-link active"></i>Marques</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="#">Affectation</a>
                            </li>
                        </ul>
                    </div>

                </li>

            </ul>
            <div class="mt-auto deconnexion">
                <a href="{{ absolute_url(path('app_logout')) }}" class="icon logout"><i class="bi bi-unlock2"></i> Déconnexion</a>
            </div>
        </div>
    </div>
    <!-- Menu Vertical-->

        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.6/dist/js/bootstrap.bundle.min.js"></script>
    </body>
</html>
